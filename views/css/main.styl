@import "nib"


input, .add-on
  box-sizing content-box

html,
body
  height 100%

body
  position relative 
  min-height 100%
  background-color #333
  color #000
  margin 0 
  padding-bottom 0

a, button
  outline 0 !important

.modal-backdrop, .modal-backdrop.fade.in
  opacity(0.6)

#loading
  position absolute
  font-size 2em
  color #fff
  width 100px
  height 50px
  margin -50px 0 0 -50px
  left 50%
  top 50%

.navbar
  margin-bottom 0
  border none
  
.navbar-inverse 
  .navbar-inner
    background-color #333 !important
    background-image none
    border none 
    padding 0
    font-size 13px
    box-shadow none

    .container-fluid
      padding-right 0

  .brand
    color #eee !important
  .brand:hover
    color #fff !important

#menu
  .navbar 
    .navbar-inner
      font-size 13px
      box-shadow none
      padding-right 0

      li.active
        a, a:hover
          box-shadow none !important
          border-color #d4d4d4
          color #900
      li
        a:hover
          color #c00

        a
          border-left 1px solid transparent
          border-right 1px solid transparent
          margin 0 4px
          padding 10px 
          text-shadow none !important
          font-size 14px

      ul.action
        li.active > a, a
          color #900 
          border-right none
          margin-right 0
        a:hover
          color #c00

      li.disabled, ul.action li.disabled
        a, a:hover
          color #ccc

.logo
  background transparent url("img/logo.png") no-repeat 0 0
  padding-left 28px

.nav
  a
    span.mute
      color #999

.btn
  box-shadow none

ul.dropdown-menu
  box-shadow none
  border-radius 3px
  margin-top 0
  padding 3px

  li
    a
      margin 0
      border-radius 2px
    a:hover
      background #d4d4d4
      color #000

ul#security
  padding-top 10px
  list-style none

  li
    float left
    padding-left 10px

    a
      color #c00
    a:hover
      color #c00
      text-decoration none

#main 
  padding-left 65px
  position relative 
  box-sizing border-box 

ul, ol
  list-style none 
  list-style-image none
  margin 0 
  padding 0

nav#primary
  width 65px 
  position absolute 
  margin 0 
  padding 0 
  top 9px 
  left 0 

  ul 
    li 
      a
        text-decoration none
        font-size 30px
        color rgba(255,255,255,0.5)
        text-align center
        line-height 1.5em
        display block
        opacity(0.5)
        color #fff

      a:hover
        opacity(0.8)

      a.active, a:hover.active
        color #fff
        background #000
        opacity(1.0)

#bg
  background #f5f6f6
  border-top-left-radius 5px
  z-index 0
  bottom 0 
  left 65px
  position absolute
  top 40px 
  right 0

#top
  margin-bottom 0
  border none

  .nav
    margin-bottom 0
    font-size 0.8em

    li
      padding 2px 5px 0 0

      a
        color #600
        border 1px solid transparent
      a:hover
        color #c00
        background-color transparent

    li.active
      a
        background-color #fff
        border-color #eee

#contents
  position relative
  box-sizing border-box 
  z-index 1

  #pages
    border-top-left-radius 5px
    background-color #ccc
    position relative

    header
      padding-left 15px 
      padding-right 15px
      z-index 1
      background-image linear-gradient(top, #f5f6f6, #ddd)
      padding-top 0.45em
      padding-bottom 0
      font-size 1.6em
      line-height 1.8em
      border-bottom #ccc 1px solid 
      border-top-left-radius 5px 
    
      h1
        display inline-block
        text-shadow rgba(255,255,255,0.8) 0 1px
        float left
        font-size 20px
        margin 5px 1em 13px 0
        line-height 1.45em 

      input.search
        border-radius(4px)
        opacity(0.7)
        box-shadow(0.9)
        outline none
        border 1px solid #ccc
        background #fff url("img/magnifier.png") no-repeat 8px center
        font-weight normal
        font-size 15px
        padding 4px 10px 4px 30px
        margin 2px 10px 6px 0

      input.search:focus, input.search:hover
        opacity(1)
        color #006

      input.search.searching
        background #fff url("img/loading.gif") no-repeat 8px center

      .btn-group 
        margin-top 3px !important

    #page  
      position relative !important 
    
      #sidebar  
        display block 
        background #edefef 
        border-right 1px solid #dadede 
        position absolute 
        top 0 
        bottom 0 
        left 0 
        color #8b9095 
        font-size 14px 

        #summary
          margin 15px

        ul.list
          max-height 620px
          overflow none

          li.empty
            padding-bottom 1px
            a
              border-bottom-color transparent
            a:hover
              background transparent

          li  
            position relative 
            clear both 
            background #edefef 
            
            a
              font-size 15px
              display block
              position relative
              padding 8px 12px 8px 12px
              line-height 1.6em
              text-decoration none
              border-bottom 1px solid #d7dbdb 
              color #666

              i
                display none 
                float right 
                font-size 12px 
                padding-top 7px 

              small
                color #900

            a:hover
              background #fff 
              color #900 

              i
                display inline 
                color #900 

            a.active
              background #fff 

              i
                display inline 

      section
        background #f5f6f6 
        padding 0
    
        #message
          margin 0 15px

          .alert
            margin-top 15px
            margin-bottom 0
          
        #inner
          padding 15px
          min-height 620px

        aside#aside
          box-sizing border-box
          border-top 0
          border-right 0
          margin 0
          position absolute
          top 0
          bottom 0
          right 0
          overflow hidden
          background #edefef
          border-left 1px solid #dadede 
          padding 0 15px
          min-height 620px
          
          h4
            small
              color #900

          h4.person
            padding-left 22px

          h4.male
            background transparent url("img/male.png") no-repeat 0 2px

          h4.female
            background transparent url("img/female.png") no-repeat 0 2px

form.box
  legend
    border-top-radius(4px)
    font-size 20px
    padding 0 10px
    line-height 30px

  label
    padding-left 6px
    color #666
    font-size 14px

  label.checkbox
    padding-left 20px

  .inner-form
    padding 0 10px 0 10px

  .buttons
    padding-top 15px

  input
    border-color #aaa
    border-radius 1px

  .control-group.error
    label
      color #b94a48
    
    input
      border-color rgba(185, 74, 72, 0.8)
      box-shadow inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(185, 74, 72, .6)
    
    .help-inline.error-message
      display inline
      padding 0
      margin 0
      padding-left 5px
      margin-bottom 1px

    .tooltip-arrow
      border-right-color #f2dede
    .tooltip-inner
      background-color #f2dede 
      color #c00
      font-size 13px

  input.required
    background #fff url("img/required.png") no-repeat right 6px

.select2-container
  margin-bottom 10px

  a
    border-radius 1px !important

.select2-choice
  background-image none !important
  background-color #fff !important

.select2-results
  .select2-highlighted 
    border-radius 1px !important

.select2-drop
  border-radius 0 0 1px 1px !important

input#file
  border-radius(3px)
  background-color #aaa
  padding .4em 1.2em
  border 1px solid #aaa
  color #222
  font-size 1.2em
  cursor pointer

input#file:hover
  background #fff
  color #111
  border-color #777

.customfile-input
  opacity(0)
  position absolute
  height 100px
  cursor pointer
  background transparent
  border 0

.customfile
  border-radius(1px)
  font 14px
  width 364px
  color #555
  cursor pointer
  overflow hidden
  padding 3px
  height 29px
  margin 0 0 25px 0
  border 1px solid #aaa
  position relative
  background #fff
  
.customfile-disabled
  opacity(0.5)
  cursor default
  
.customfile-feedback
  display block
  margin 0px 1px 2px 5px
  padding 6px 0
  
.customfile-feedback-populated
  color #555
  padding-left 26px
  
.customfile-button
  border-radius(2px)
  color #fff
  float right
  text-align center
  text-decoration none
  color #333
  text-shadow 0 1px 1px rgba(255, 255, 255, 0.75)
  background-color #f5f5f5
  background-image -moz-linear-gradient(top, #ffffff, #e6e6e6)
  background-image -webkit-gradient(linear, 0 0, 0 100%, from(#ffffff), to(#e6e6e6))
  background-image -webkit-linear-gradient(top, #ffffff, #e6e6e6)
  background-image -o-linear-gradient(top, #ffffff, #e6e6e6)
  background-image linear-gradient(top bottom, #ffffff, #e6e6e6)
  background-repeat repeat-x
  border-color #e6e6e6 #e6e6e6 #bfbfbf
  border-color rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25)
  border 1px solid #bbb
  color #444
  padding 3px 5px
  display inline-block
  font-size 14px
  font-weight normal
  cursor pointer
  line-height 21px
  
.customfile-hover .customfile-button, .customfile-focus .customfile-button
  color #333
  background-color #e6e6e6
  *background-color #d9d9d9
  background-position 0 -15px
  -webkit-transition background-position 0.1s linear
  -moz-transition background-position 0.1s linear
  -o-transition background-position 0.1s linear
  transition background-position 0.1s linear
  
.customfile-focus .customfile-button 
  outline 1px dotted #ccc

.customfile-ext-jpg, .customfile-ext-gif, .customfile-ext-png, .customfile-ext-jpeg, .customfile-ext-bmp
  background transparent url("img/image.png") no-repeat left 2px
.customfile-ext-mp3, .customfile-ext-mp4, .customfile-ext-mov, .customfile-ext-swf, .customfile-ext-wav, .customfile-ext-m4v
  background transparent url("img/media.png") no-repeat left 2px
.customfile-ext-zip, .customfile-ext-tar, .customfile-ext-sit
  background transparent url("img/zip.png") no-repeat left 2px

.image
  border-radius(8px)
  border 1px solid #dadede
  background #fff
  padding 4px
  margin 10px 0 10px 0         
  
  img
    box-sizing(border-box)
    border-radius(6px)
    border 1px solid #eee

.lightbox
  img
    border-radius(4px)

figure.photo
  display inline-block
  margin 0 10px 10px 0
  padding 0
  cursor pointer
  position relative
  overflow hidden

  .image
    border-radius(4px)
    opacity(0.9)
    position relative
    margin 0

    figcaption
      position absolute
      background rgba(0,0,0,0.25)
      border-radius 3px
      color white
      margin 10px
      padding 5px 10px 
      opacity 0
      transition all 0.3s ease
      text-align center

    figcaption:empty
      display none
    
    img
      box-sizing(border-box)
      border-radius(3px)
      border 1px solid #eee

    a.delete, a.default
      opacity(0)
      position absolute
      top 15px
      width 16px
      text-decoration none
    
    a.delete
      background transparent url("img/error.png") no-repeat 0 0
      right 15px

    a.default
      background transparent url("img/user.png") no-repeat 0 0
      left 15px
  
  .image:hover
    opacity(1)
    a
      opacity(0.5)
    a:hover
      opacity(1)
    figcaption
      opacity 1

  .image.caption-left 
    figcaption
      bottom 0
      left -30%
  .image.caption-left:hover 
    figcaption
      left 0

  .image.caption-right 
    figcaption
      bottom 0
      right -30%
  .image.caption-right:hover 
    figcaption
      right 0

  .image.caption-top 
    figcaption
      left 0
      right 0
      top -30%
  .image.caption-top:hover 
    figcaption
      top 0

  .image.caption-bottom 
    figcaption
      bottom -30%
      left 0
      right 0
  .image.caption-bottom:hover 
    figcaption
      bottom 0

@media screen and (min-width: 1200px)
  #sidebar  
    width 240px 

  aside#aside
    width 240px

  section
    margin-left 240px 
    margin-right 240px

@media screen and (min-width: 960px) and (max-width: 1199px)
  #sidebar  
    width 210px 

  aside#aside
    width 210px

  section
    margin-left 210px 
    margin-right 210px

@media screen and (min-width: 768px) and (max-width: 959px)
  #sidebar  
    width 180px 

  aside#aside
    width 180px

  section
    margin-left 180px 
    margin-right 180px

@media screen and (max-width: 767px)
  #sidebar  
    width 180px 

  aside#aside
    display none

  section
    margin-left 180px 
    margin-right 0
